<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.ariefzuhri.gizee.main.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <argument
            android:name="saved_query"
            android:defaultValue=""
            app:argType="string" />

        <action
            android:id="@+id/action_home_to_search_result"
            app:destination="@id/fragment_search_result"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_home_to_history"
            app:destination="@id/fragment_history" />

    </fragment>

    <fragment
        android:id="@+id/fragment_search_result"
        android:name="com.ariefzuhri.gizee.main.searchresult.SearchResultFragment"
        android:label="@string/search_result"
        tools:layout="@layout/fragment_search_result">

        <argument
            android:name="query"
            android:defaultValue=""
            app:argType="string" />

    </fragment>

    <dialog
        android:id="@+id/fragment_history"
        android:name="com.ariefzuhri.gizee.main.history.HistoryFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_history">

        <action
            android:id="@+id/action_return_to_home"
            app:destination="@id/fragment_home"
            app:launchSingleTop="true"
            app:popUpTo="@id/fragment_history"
            app:popUpToInclusive="true" />

    </dialog>

</navigation>